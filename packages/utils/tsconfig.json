{
    "extends": "@mora/tsconfig/base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleDetection": "auto",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
    "exclude": ["node_modules", "dist"]
}